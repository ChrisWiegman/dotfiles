[user]
	name = Joy Wiegman
	email = joy@joywiegman.com
	signingkey = ~/.ssh/id_ed25519.pub

[gpg]
    format = ssh

[commit]
    gpgsign = true

[tag]
    gpgsign = true

[pull]
    rebase = false
    ff = only

[push]
    default = simple

[color]
    ui = true

[init]
    defaultBranch = main

[merge]
    conflictstyle = zdiff3

[diff]
    colorMoved = zebra